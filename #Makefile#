# Makefile configuration
COMMON_OBJECTS  =
CPU             = msp430g2553
CFLAGS          = -mmcu=${CPU} -I./lcdLib
LDFLAGS         = -L/opt/ti/msp430_gcc/include

# Switch the compiler (for the internal make rules)
CC              = msp430-elf-gcc
AS              = msp430-elf-as

all: TicTacToe.elf

# Additional rules for files
TicTacToe.elf: ${COMMON_OBJECTS} main.o grid.o game_logic.o ../lcdLib/lcddraw.o ../lcdLib/lcdutils.o
	${CC} ${CFLAGS} ${LDFLAGS} -o $@ $^

load: TicTacToe.elf
	msp430loader.sh TicTacToe.elf

clean:
	rm -f *.o *.elf
	rm -f ../lcdLib/*.o *.elf

# Main
main.o: main.c grid.h game_logic.h ../lcdLib/lcddraw.h ../lcdLib/lcdutils.h

# Grid
grid.o: grid.c grid.h ../lcdLib/lcddraw.h ../lcdLib/lcdutils.h

# Game Logic
game_logic.o: game_logic.c game_logic.h grid.h ../lcdLib/lcddraw.h ../lcdLib/lcdutils.h
